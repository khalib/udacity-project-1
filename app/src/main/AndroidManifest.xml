<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calebwhang.spotifystreamer" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity
            android:name=".SearchArtistActivity"
            android:label="@string/title_activity_artist_search" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopTracksActivity"
            android:label="@string/title_activity_top_tracks"
            android:parentActivityName=".SearchArtistActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.calebwhang.spotifystreamer.SearchArtistActivity" />
        </activity>
        <activity
            android:name=".TrackPlayerActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
